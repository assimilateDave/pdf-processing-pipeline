# Environment Configuration
# Copy this file to .env and modify the values as needed

# Elasticsearch Configuration
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_INDEX=pdf_documents

# Tesseract OCR Configuration
TESSERACT_CMD=tesseract
OCR_LANGUAGES=eng

# Directory Configuration
WATCH_DIRECTORY=data/input

# Database Configuration
DATABASE_URL=sqlite:///pipeline.db

# Flask Configuration
SECRET_KEY=your-secret-key-change-in-production
FLASK_ENV=production

# Service Configuration (Windows)
SERVICE_NAME=PDFProcessingPipeline
SERVICE_DISPLAY_NAME=PDF Processing Pipeline Service